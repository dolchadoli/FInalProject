<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel UI + API Suite" parallel="classes" thread-count="2">

    <listeners>
        <listener class-name="com.automationexercise.base.AllureTestListener"/>
    </listeners>

    <test name="UI Tests">
        <packages>
            <package name="com.automationexercise.tests.ui"/>
        </packages>
    </test>

    <test name="API Tests">
        <packages>
            <package name="com.automationexercise.tests.api"/>
        </packages>
    </test>

</suite>
